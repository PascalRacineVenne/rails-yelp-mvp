<p>
    Name:
  <%= @restaurant.name %>
</p>

<p>
    Address:
  <%= @restaurant.address %>
</p>

<p>
    Phone Number:
  <%= @restaurant.phone_number %>
</p>

<p>
    Category:
  <%= @restaurant.category %>
</p>

<!-- display review -->
<% @restaurant.reviews.each do |review| %>
  <p><%= review.content %></p>
  <p><%= review.rating %></p>
<% end %>

<!-- link to leave a review -->

<%= link_to 'Leave a Review', new_restaurant_review_path(@restaurant) %>
